extends layout

block content
  h1 Books
  p
    a.button(href='/books/new') Create New Book
  table
    thead
      tr
        th Title
        th Author
        th Genre
        th Year

    tbody
      each bk in books
        tr
          td
            a(href=`/books/${bk.id}`) #{bk.title}
          td= bk.author 
          td= bk.genre 
          td= bk.year
    